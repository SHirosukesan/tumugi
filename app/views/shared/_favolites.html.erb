<% if user.favorited_by?(current_user) %>
    <%= link_to favorites_path(user.id), method: :delete,remote: true do %>
      <span class="glyphicon glyphicon-heart"><%= book.favorites.count%></span>
    <% end %>
  <% else %>
    <%= link_to favorites_path(user.id), method: :post,remote: true do %>
      <span class="glyphicon glyphicon-heart-empty"><%= book.favorites.count %></span>
    <% end %>
  <% end %>