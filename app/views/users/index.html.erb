<div>
 <% @publishers.each do |publisher| %>
	<table>
		<tr>
			<th>
				<!-- userのイメージ存在するか？ -->
			 <% if publisher.publisher_images.present? %>
  				 <% publisher.publisher_images.each do |image| %>
			     	<%= attachment_image_tag image, :image, :fill, 150, 150 %>
                 <% end %>
			 <% else %>
			    <%= image_tag 'noimg.jpg', size: '150x150' %>
			<% end %>
			     <%= publisher.company_name%>
			     <%= publisher.competence %>
			     <%= publisher.address%>
		    </th>
		</tr>
		<tr>
	    	<td>
		      <%= publisher.profile %>
	    	</td>
	    </tr>
	</table>
	<% end %>
</div>

